<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EB8FE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_win2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/final_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="28dp"
        android:elevation="5dp"
        android:rotationY="180"
        android:src="@drawable/statistic_moon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/resssultttt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gold"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firstRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ribeye"
            android:text="456"
            android:textSize="24dp"
            android:textColor="#544EB9"
            app:layout_constraintBottom_toBottomOf="@+id/gold"
            app:layout_constraintEnd_toEndOf="@+id/gold"
            app:layout_constraintStart_toStartOf="@+id/gold"
            app:layout_constraintTop_toTopOf="@+id/gold"
            app:layout_constraintVertical_bias="0.521" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press"
            android:text="moves"
            android:textSize="20dp"
            android:textColor="#544EB9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/gold"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="@+id/gold"
            app:layout_constraintTop_toBottomOf="@+id/gold"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="320dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/silver"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/silver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secondRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ribeye"
            android:text="456"
            android:textSize="22dp"
            android:textColor="#544EB9"
            app:layout_constraintBottom_toBottomOf="@+id/silver"
            app:layout_constraintEnd_toEndOf="@+id/silver"
            app:layout_constraintStart_toStartOf="@+id/silver"
            app:layout_constraintTop_toTopOf="@+id/silver"
            app:layout_constraintVertical_bias="0.521" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press"
            android:text="moves"
            android:textSize="20dp"
            android:textColor="#544EB9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/silver"
            app:layout_constraintStart_toStartOf="@+id/silver"
            app:layout_constraintTop_toBottomOf="@+id/silver" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="512dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bronze"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/bronze"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thirdRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ribeye"
            android:text="456"
            android:textSize="22dp"
            android:textColor="#544EB9"
            app:layout_constraintBottom_toBottomOf="@+id/bronze"
            app:layout_constraintEnd_toEndOf="@+id/bronze"
            app:layout_constraintStart_toStartOf="@+id/bronze"
            app:layout_constraintTop_toTopOf="@+id/bronze"
            app:layout_constraintVertical_bias="0.521" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press"
            android:text="moves"
            android:textSize="20dp"
            android:textColor="#544EB9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bronze"
            app:layout_constraintStart_toStartOf="@+id/bronze"
            app:layout_constraintTop_toBottomOf="@+id/bronze" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>